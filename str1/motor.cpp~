/* * * * * * * * * * * * * * * * * * * * * * * * * * *
 * Code to get an analog signal from analog inputs
 * * * * * * * * * * * * * * * * * * * * * * * * * * *
 * Written by Cheyn Rushing
 */

#include "motorFunc.h"

using namespace std;

int main() {
  char fwdPath [22] = "/sys/class/gpio/gpio38"; // P8 Pin 3
  char bwdPath [22] = "/sys/class/gpio/gpio34"; // P8 Pin 5
  char brake [22] = "/sys/class/gpio/gpio66";   // P8 Pin 7
  while (1) {
    motorControl(fwdPath); // Forward 1 second.
    motorControl(brake); // Brake for 1 second.
    motorControl(bwdPath); // Backward 1 second.
    motorControl(brake);
  }
}
